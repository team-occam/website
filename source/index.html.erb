    <h3>Companies we've worked with</h3>
    <p>Lorem impsum dolor amet sit consectetur</p>
    <div class="o-grid">
      <% current_page.data.companies.each do |companies| %>
        <div class="o-grid__item c-company-card u-1/2 u-1/4@md u-block">
          <a href="<%= companies.url %>" target="_blank"><%= companies.pretty_name %></a>
        </div>
      <% end %>
    </div>
  </div>
</section>















