<header class="c-home-section">
  <div class="o-container">
    <div class="o-grid">
      <h1 class="o-grid__item u-1/1 c-home-section__heading">We're Occam, a digital product agency</h1>
      <div class="o-grid__item u-1/3">
        <h4 class="c-home-section__subheading">We empower our partners through <br class="u-hide--medium-down">the simplicity of design.</h4>
      </div>
      <div class="o-grid__item u-1/3">
        <ul class="o-list o-list--inline">
          <% current_page.data.services.each do |services| %>
            <li class="o-inline-list__item"><%= services.service_title %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>

<section class="c-section">
  <div class="o-slant"></div>
